<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:statusBarColor">@color/statusGray</item>
        <item name="android:navigationBarColor">@color/statusGray</item>
        <item name="colorAccent">@color/blueLight</item>
    </style>

    <style name="match">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="small_text" parent="text">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="text" parent="wrap">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/grayshi</item>
    </style>

    <style name="text_accent" parent="text">
        <item name="android:textColor">@color/blueLight</item>
    </style>

    <style name="text_black" parent="text">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="h2" parent="text_black">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="h1" parent="text_black">
        <item name="android:textSize">32sp</item>
    </style>

    <style name="ct_auto">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">0dp</item>
    </style>

    <style name="button" parent="ct_auto">
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="edit_text">
        <item name="android:layout_margin">20dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textColorHint">#ccc</item>
    </style>
</resources>